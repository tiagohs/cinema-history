<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/grey_transparent_medium"
    android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
    app:cardCornerRadius="@dimen/activity_vertical_margin_1.2x">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genreName"
        android:fontFamily="@font/proxima_nova_bold"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/text_size_zeplin_18pt"
        android:paddingStart="@dimen/activity_vertical_margin_2x"
        android:paddingEnd="@dimen/activity_vertical_margin_2x"
        android:paddingTop="@dimen/activity_vertical_margin_0.5x"
        android:paddingBottom="@dimen/activity_vertical_margin_0.5x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieTitle"
    />

</androidx.cardview.widget.CardView>