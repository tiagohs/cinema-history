<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineVertical"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <View
        android:layout_width="@dimen/timeline_divisor_vertical_width"
        android:layout_height="0dp"
        android:id="@+id/divisor"
        android:background="@color/md_black_1000"
        android:alpha="0.8"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/year"
        android:textColor="@color/md_black_1000"
        android:fontFamily="@font/oswald_bold"
        android:textSize="@dimen/text_size_timeline_title"
        android:textAlignment="textEnd"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:lineSpacingMultiplier="0.65"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
        tools:text="18\n95"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/timeline_footer_circle_container_size"
        android:layout_height="@dimen/timeline_footer_circle_container_size"
        android:id="@+id/circle"
        app:cardCornerRadius="@dimen/timeline_footer_circle_container_radius"
        app:cardBackgroundColor="@color/md_black_1000"
        app:layout_constraintBottom_toBottomOf="@id/year"
        app:layout_constraintTop_toBottomOf="@id/year"
        app:layout_constraintEnd_toEndOf="@id/divisor"
        app:layout_constraintStart_toStartOf="@id/divisor" >

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/timeline_footer_circle_size"
        android:layout_height="@dimen/timeline_footer_circle_size"
        app:cardCornerRadius="@dimen/timeline_footer_circle_radius"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/md_white_1000" />

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/timeline_divisor_horizontal_height"
        android:id="@+id/divisorHorizontal"
        android:background="@color/md_black_1000"
        android:alpha="0.8"
        app:layout_constraintStart_toEndOf="@id/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/circle"
        app:layout_constraintBottom_toBottomOf="@id/circle"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/containerTop"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divisorHorizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/containerTopGuidelineVertical"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/containerTopGuidelineVertical2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.58" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/containerTopGuidelineVertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleContainer"
            android:maxWidth="@dimen/timeline_title_container_width"
            android:elevation="@dimen/activity_vertical_margin_0.5x"
            android:background="@color/md_yellow_A700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/containerTopGuidelineVertical2"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/timeline_title_line_width"
                android:layout_height="@dimen/timeline_title_line_height"
                android:id="@+id/textLine"
                app:cardCornerRadius="@dimen/activity_vertical_margin_0.2x"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/md_black_1000"
                android:elevation="0dp"
                android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
                app:layout_constraintTop_toTopOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textSize="@dimen/text_size_zeplin_26pt"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:lineSpacingMultiplier="0.8"
                android:paddingTop="@dimen/activity_vertical_margin_0.5x"
                android:paddingStart="@dimen/activity_vertical_margin_1.2x"
                android:paddingEnd="@dimen/activity_vertical_margin_1.2x"
                android:paddingBottom="@dimen/activity_vertical_margin_0.5x"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/containerBottom"
        android:layout_marginBottom="@dimen/timeline_container_bottom_margin_bottom"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divisorHorizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/containerBottomGuidelineVertical"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/itemDescription"
            android:textColor="@color/md_black_1000"
            android:textColorLink="@color/md_yellow_A700"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/text_size_zeplin_22pt"
            android:lineSpacingMultiplier="0.8"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_vertical_margin_0.5x"
            android:layout_marginEnd="@dimen/activity_vertical_margin_0.5x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/containerBottomGuidelineVertical"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>