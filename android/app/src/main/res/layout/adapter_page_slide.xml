<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
    android:layout_marginBottom="@dimen/activity_vertical_margin_2.5x">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageListContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_slide_height"
            android:id="@+id/imageList"
            android:nestedScrollingEnabled="true"
        />

        <cz.intik.overflowindicator.OverflowPagerIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
            android:id="@+id/imageListIndicator"
            android:layout_gravity="center_horizontal|bottom"
            app:dotFillColor="@color/md_white_1000"
            app:dotStrokeColor="@color/md_white_1000"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
        app:layout_constraintTop_toBottomOf="@id/imageListContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/include_page_content_header" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>