<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemContainerCard"
    app:cardElevation="@dimen/activity_vertical_margin_0.5x"
    app:cardCornerRadius="@dimen/activity_vertical_margin_1.2x"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@color/md_orange_500"
    android:layout_margin="@dimen/activity_vertical_margin_1.2x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_special_item_backdrop_height"
            android:id="@+id/movieBackdrop"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/movie_special_item_line_height"
            android:id="@+id/line"
            app:layout_constraintTop_toBottomOf="@id/movieBackdrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <include layout="@layout/view_line_five_colors" />

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/movie_special_item_poster_width"
            android:layout_height="@dimen/movie_special_item_poster_height"
            android:id="@+id/posterCard"
            app:cardElevation="@dimen/activity_vertical_margin_1.2x"
            app:cardCornerRadius="@dimen/activity_vertical_margin_1.2x"
            android:layout_marginStart="@dimen/activity_vertical_margin_2.5x"
            android:layout_marginTop="@dimen/movie_special_item_poster_margin_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/moviePoster"
                android:scaleType="centerCrop"
            />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieName"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_zeplin_26pt"
            android:fontFamily="@font/oswald_bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
            android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
            android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
            android:lineSpacingMultiplier="0.8"
            app:layout_constraintStart_toEndOf="@id/posterCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="@dimen/department_button_size"
            android:id="@+id/departments"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="@dimen/activity_vertical_margin_1.2x"
            android:nestedScrollingEnabled="true"
            android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieName"
            app:layout_constraintStart_toEndOf="@id/posterCard"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/character"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_zeplin_22pt"
            android:visibility="gone"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
            android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
            android:lineSpacingMultiplier="0.8"
            app:layout_constraintTop_toBottomOf="@id/departments"
            app:layout_constraintStart_toEndOf="@id/posterCard"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/overview"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/text_size_zeplin_18pt"
            android:fontFamily="@font/proxima_nova_regular"
            android:lines="4"
            android:ellipsize="end"
            android:maxLines="4"
            android:layout_margin="@dimen/activity_vertical_margin_2x"
            app:layout_constraintTop_toBottomOf="@id/posterCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>