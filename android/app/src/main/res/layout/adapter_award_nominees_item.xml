<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin_1.2x">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:id="@+id/imageCardContainer"
        app:cardCornerRadius="@dimen/activity_vertical_margin_2x"
        app:cardElevation="@dimen/activity_vertical_margin_0.5x"
        app:cardBackgroundColor="@color/oscar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/movie_item_image_width"
                android:layout_height="@dimen/movie_item_image_height"
                android:id="@+id/imageCard"
                app:cardCornerRadius="@dimen/activity_vertical_margin_2x"
                app:cardElevation="0dp"
                android:elevation="0dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/image"
                        android:src="@drawable/img_ben_hur"
                        android:scaleType="centerCrop"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/movie_item_image_degrade"
                        android:background="@drawable/background_degrade_bottom"
                        app:layout_constraintBottom_toTopOf="@id/winnerMessage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                    />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
                        android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
                        android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
                        app:layout_constraintBottom_toTopOf="@id/winnerMessage"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/nomineesTitle"
                            android:textSize="@dimen/text_size_zeplin_18pt"
                            android:layout_marginBottom="@dimen/activity_vertical_margin_0.5x"
                            android:textColor="@color/md_white_1000"
                            android:fontFamily="@font/oswald_bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/nomineesSubtitle"
                            tools:text="Titulo do filme"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/nomineesSubtitle"
                            android:textSize="@dimen/text_size_zeplin_18pt"
                            android:textColor="@color/md_grey_100"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="Diretor, Produtor"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/winnerMessage"
                        android:textSize="@dimen/text_size_zeplin_22pt"
                        android:textColor="@color/md_grey_100"
                        android:fontFamily="@font/futura_bold_font"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:background="@color/oscar"
                        android:text="@string/winner"
                        android:visibility="gone"
                        android:paddingStart="@dimen/activity_vertical_margin"
                        android:paddingEnd="@dimen/activity_vertical_margin"
                        android:paddingTop="@dimen/activity_vertical_margin_0.5x"
                        android:paddingBottom="@dimen/activity_vertical_margin_0.5x"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:visibility="visible"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>