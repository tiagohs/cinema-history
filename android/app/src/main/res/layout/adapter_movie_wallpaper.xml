<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/movie_wallpaper_card_width"
    android:layout_height="@dimen/movie_wallpaper_card_height"
    android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
    android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/image"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:background="?selectableItemBackground"
    />

</androidx.constraintlayout.widget.ConstraintLayout>