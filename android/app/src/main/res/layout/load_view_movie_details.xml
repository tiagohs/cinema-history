<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/imageLoad"
        android:fitsSystemWindows="true"
        android:background="@color/cell_background_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieHeaderInfoContainer"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageLoad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movieHeaderInfoRight"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6"
        />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="16dp"
            android:background="@color/cell_background_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/movieHeaderInfoRight"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/movieHeaderInfoRight">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/movieDirectorsTitle"
                android:text="                                           "
                android:background="@color/cell_background_light"
                android:textColor="@color/md_grey_800"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/movieScreenplayTitle"
                android:text="                                   "
                android:background="@color/cell_background_light"
                android:textColor="@color/md_grey_800"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/movieDirectorsTitle"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/originalLanguageTitle"
                android:text="                       "
                android:background="@color/cell_background_light"
                android:textColor="@color/md_grey_800"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/movieScreenplayTitle"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/runtimeTitle"
                android:text="       "
                android:background="@color/cell_background_light"
                android:textColor="@color/md_grey_800"
                android:fontFamily="@font/roboto_light"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/originalLanguageTitle"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/movieRuntime"
                android:text="                      "
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textAlignment="textEnd"
                android:layout_marginTop="12dp"
                android:background="@color/cell_background_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/runtimeTitle"
                app:layout_constraintStart_toEndOf="@id/runtimeTitle"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieHeaderSummaryContainer"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/movieHeaderInfoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/summaryTitle"
            android:text="                        "
            android:textSize="22sp"
            android:fontFamily="@font/oswald_regular"
            android:background="@color/cell_background_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieSummary"
            android:textSize="14sp"
            android:fontFamily="@font/proxima_nova_regular"
            android:layout_marginTop="10dp"
            android:lines="8"
            android:background="@color/cell_background_light"
            app:layout_constraintTop_toBottomOf="@id/summaryTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>