<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/footerContainer"
    android:layout_marginStart="@dimen/activity_vertical_margin_2x"
    android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footerTitle"
        android:textColor="@color/md_grey_700"
        android:fontFamily="@font/proxima_nova_bold"
        android:textSize="@dimen/text_size_zeplin_26pt"
        android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
        android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
        app:layout_constraintStart_toEndOf="@id/startLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/footerText"
        android:textColor="@color/md_grey_700"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="@dimen/text_size_zeplin_22pt"
        android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
        android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
        app:layout_constraintStart_toEndOf="@id/startLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/footerTitle"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/footerReference"
        android:textColor="@color/md_grey_900"
        android:fontFamily="@font/proxima_nova_regular"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_zeplin_18pt"
        android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
        android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
        app:layout_constraintTop_toBottomOf="@id/footerText"
        app:layout_constraintStart_toEndOf="@id/startLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:layout_width="@dimen/page_content_header_line_width"
        android:layout_height="0dp"
        android:id="@+id/startLine"
        android:background="@color/md_grey_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>