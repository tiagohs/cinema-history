<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_black_1000">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profileTitle"
        android:text="@string/filmography"
        android:textSize="@dimen/text_size_zeplin_36pt"
        android:textColor="@color/md_grey_300"
        android:fontFamily="@font/oswald_bold"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_4x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageListContainer"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_2.5x"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filmographyList"
            android:nestedScrollingEnabled="true"/>

        <cz.intik.overflowindicator.OverflowPagerIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
            android:id="@+id/filmographyListIndicator"
            android:layout_gravity="center_horizontal|bottom"
            app:dotFillColor="@color/md_white_1000"
            app:dotStrokeColor="@color/md_white_1000"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>