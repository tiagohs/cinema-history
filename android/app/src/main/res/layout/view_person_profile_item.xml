<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_black_1000">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineVertical"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:id="@+id/divisor"
        android:background="@color/md_white_1000"
        android:alpha="0.8"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileItemTitle"
        android:textColor="@color/md_white_1000"
        android:fontFamily="@font/oswald_bold"
        android:textSize="16sp"
        android:text="1942-1972"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profileContent"
        android:textColor="@color/md_grey_300"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="14sp"
        android:text="Martin Scorsese e o roteirista Jay Cocks escreveram um tratamento inicial para o livro de Shusaku Endo ainda na década de 1990. A ideia inicial era que o diretor rodasse o longa-metragem logo após concluir Gangues de Nova York (2002). Entretanto, dificuldades para obter a aprovação do orçamento junto a alguma produtora fizeram com que o projeto fosse adiado por cerca de 15 anos."
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/profileItemTitle"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/circle"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/md_white_1000"
        app:layout_constraintBottom_toBottomOf="@id/profileItemTitle"
        app:layout_constraintTop_toBottomOf="@id/profileItemTitle"
        app:layout_constraintEnd_toEndOf="@id/divisor"
        app:layout_constraintStart_toStartOf="@id/divisor" >

        <androidx.cardview.widget.CardView
            android:layout_width="6dp"
            android:layout_height="6dp"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/md_black_1000" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>