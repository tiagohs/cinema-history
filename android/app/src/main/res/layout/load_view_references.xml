<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/references_placeholder_height_medium"
        android:background="@color/cell_background_light"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.5x"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/references_placeholder_height_small"
        android:background="@color/cell_background_light"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.5x"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/references_placeholder_height_large"
        android:background="@color/cell_background_light"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.5x"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/references_placeholder_height_small"
        android:background="@color/cell_background_light"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.5x"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/references_placeholder_height_medium"
        android:background="@color/cell_background_light"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.5x"
    />

</LinearLayout>