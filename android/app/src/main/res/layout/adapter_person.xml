<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/person_item_width"
        android:layout_height="@dimen/person_item_height"
        android:id="@+id/personImageContainer"
        app:cardCornerRadius="@dimen/activity_vertical_margin_1.2x"
        app:cardElevation="@dimen/activity_vertical_margin_0.5x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
        android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/personImage"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/person_item_degrade"
                android:background="@drawable/background_degrade_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/personName"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/text_size_zeplin_22pt"
                android:fontFamily="@font/oswald_bold"
                android:textAlignment="textStart"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                app:layout_constraintBottom_toTopOf="@id/personSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/personSubtitle"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/text_size_zeplin_18pt"
                android:fontFamily="@font/proxima_nova_regular"
                android:textAlignment="textStart"
                android:layout_marginStart="@dimen/activity_vertical_margin_0.5x"
                android:layout_marginEnd="@dimen/activity_vertical_margin_0.5x"
                android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>