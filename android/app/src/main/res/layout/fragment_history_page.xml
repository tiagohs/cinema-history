<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    android:background="@color/md_white_1000"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/collapsingToolbar"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll"
            app:scrimVisibleHeightTrigger="0dp"
            app:contentScrim="@color/colorPrimary"
            app:titleEnabled="false">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/loadHeaderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:shimmer_duration="800">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseParallaxMultiplier="0.8"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/headerContainerLoadView"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mainTopicNameLoadView"
                            android:gravity="center"
                            android:textColor="@color/transparent"
                            android:textSize="@dimen/text_size_zeplin_18pt"
                            android:alpha="0"
                            android:fontFamily="@font/oswald_bold"
                            android:text="De 2010 atÃ© atualmente"
                            android:background="@color/cell_background_dark"
                            android:paddingTop="@dimen/activity_vertical_margin_0.2x"
                            android:paddingBottom="@dimen/activity_vertical_margin_0.2x"
                            android:paddingStart="@dimen/activity_vertical_margin"
                            android:paddingEnd="@dimen/activity_vertical_margin"
                            android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pageTitleLoadView"
                            android:gravity="center"
                            android:textColor="@color/md_white_1000"
                            android:textSize="@dimen/text_size_zeplin_34pt"
                            android:textAllCaps="true"
                            android:background="@color/cell_background_dark"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:paddingTop="@dimen/activity_vertical_margin_0.2x"
                            android:paddingBottom="@dimen/activity_vertical_margin_0.2x"
                            android:layout_marginStart="@dimen/activity_vertical_margin_2x"
                            android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
                            android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
                            android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
                            app:layout_constraintTop_toBottomOf="@id/mainTopicNameLoadView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pageDescriptionLoadView"
                            android:gravity="center"
                            android:textColor="@color/md_white_1000"
                            android:lines="3"
                            android:textSize="@dimen/text_size_zeplin_22pt"
                            android:fontFamily="@font/proxima_nova_regular"
                            android:background="@color/cell_background_dark"
                            android:paddingBottom="@dimen/activity_vertical_margin_0.2x"
                            android:layout_marginStart="@dimen/activity_vertical_margin_2x"
                            android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
                            android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
                            android:layout_marginBottom="@dimen/activity_vertical_margin_2x"
                            app:layout_constraintTop_toBottomOf="@id/pageTitleLoadView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/history_page_image_height"
                        android:id="@+id/pageHeaderImageLoadView"
                        android:background="@color/cell_background_dark"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toBottomOf="@id/headerContainerLoadView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cinemaImageContainer"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/headerContainer"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mainTopicName"
                        android:gravity="center"
                        android:textColor="@color/md_white_1000"
                        android:textSize="@dimen/text_size_zeplin_18pt"
                        android:alpha="0"
                        android:fontFamily="@font/oswald_bold"
                        android:background="@color/md_red_500"
                        android:paddingTop="@dimen/activity_vertical_margin_0.2x"
                        android:paddingBottom="@dimen/activity_vertical_margin_0.2x"
                        android:paddingStart="@dimen/activity_vertical_margin"
                        android:paddingEnd="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pageTitle"
                        android:gravity="center"
                        android:textColor="@color/md_white_1000"
                        android:textSize="@dimen/text_size_zeplin_34pt"
                        android:textAllCaps="true"
                        android:alpha="0"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:paddingTop="@dimen/activity_vertical_margin_0.2x"
                        android:paddingBottom="@dimen/activity_vertical_margin_0.2x"
                        android:paddingStart="@dimen/activity_vertical_margin_2x"
                        android:paddingEnd="@dimen/activity_vertical_margin_2x"
                        android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
                        android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
                        app:layout_constraintTop_toBottomOf="@id/mainTopicName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                    />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pageDescription"
                        android:gravity="center"
                        android:textColor="@color/md_white_1000"
                        android:textSize="@dimen/text_size_zeplin_22pt"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:alpha="0"
                        android:paddingBottom="@dimen/activity_vertical_margin_0.2x"
                        android:paddingStart="@dimen/activity_vertical_margin_2x"
                        android:paddingEnd="@dimen/activity_vertical_margin_2x"
                        android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
                        android:layout_marginBottom="@dimen/activity_vertical_margin_2x"
                        app:layout_constraintTop_toBottomOf="@id/pageTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_page_image_height"
                    android:id="@+id/pageHeaderImage"
                    android:scaleType="centerCrop"
                    android:alpha="0.8"
                    app:layout_constraintTop_toBottomOf="@id/headerContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/history_page_image_degrade_bottom_height"
                    android:background="@drawable/background_degrade_top"
                    app:layout_constraintTop_toBottomOf="@id/headerContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:fitsSystemWindows="false"
                app:layout_collapseParallaxMultiplier="0.8"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loadContentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_white_1000"
        app:shimmer_duration="800"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_white_1000"
            android:layout_marginStart="@dimen/activity_vertical_margin_2x"
            android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                    "
                android:layout_marginTop="@dimen/activity_vertical_margin_2x"
                android:background="@color/cell_background_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                    "
                android:lines="3"
                android:textSize="@dimen/text_size_zeplin_22pt"
                android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
                android:background="@color/cell_background_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:textSize="@dimen/text_size_zeplin_22pt"
                android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
                android:background="@color/cell_background_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:textSize="@dimen/text_size_zeplin_22pt"
                android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
                android:background="@color/cell_background_light" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pageContentList"
        android:alpha="0"
        android:background="@color/md_white_1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>