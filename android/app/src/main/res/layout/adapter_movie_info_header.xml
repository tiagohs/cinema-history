<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pageContentListContainer"
        app:cardCornerRadius="@dimen/activity_vertical_margin_1.2x"
        app:cardElevation="@dimen/activity_vertical_margin_0.5x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movieHeaderInfoContainer"
            android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
            android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
            android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
            android:layout_marginBottom="@dimen/activity_vertical_margin_2.5x"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/movieHeaderInfoRight"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/movie_info_header_poster_height"
                android:id="@+id/imageCard"
                android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
                android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
                android:layout_marginBottom="@dimen/activity_vertical_margin_2x"
                app:cardCornerRadius="@dimen/activity_vertical_margin_2x"
                app:cardElevation="@dimen/activity_vertical_margin_0.5x"
                android:alpha="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/movieHeaderInfoRight"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/moviePoster"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/movieHeaderInfoRight">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieDirectorsTitle"
                    android:text="@string/directors"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieDirectors"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/movieDirectorsTitle"
                    app:layout_constraintBottom_toTopOf="@id/movieScreenplay"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieScreenplayTitle"
                    android:text="@string/write_by"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/movieDirectors"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieScreenplay"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/movieDirectors"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/movieScreenplayTitle"
                    app:layout_constraintBottom_toTopOf="@id/movieOriginalLanguage"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/originalLanguageTitle"
                    android:text="@string/language_original"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/movieScreenplay"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieOriginalLanguage"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/movieScreenplay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/originalLanguageTitle"
                    app:layout_constraintBottom_toTopOf="@id/movieRuntime"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/runtimeTitle"
                    android:text="@string/duration"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/originalLanguageTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieRuntime"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/movieOriginalLanguage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/runtimeTitle"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/releaseDateTitle"
                    android:text="@string/release"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/movieRuntime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="visible"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/movieReleaseDate"
                    android:textColor="@color/md_black_1000"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/text_size_zeplin_22pt"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:textAlignment="textEnd"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/movieRuntime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/releaseDateTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="visible"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
