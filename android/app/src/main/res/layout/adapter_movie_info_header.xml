<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/movieHeaderInfoContainer"
    android:layout_marginTop="30dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/movieHeaderInfoRight"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:id="@+id/imageCard"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/movieHeaderInfoRight"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/moviePoster"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/movieHeaderInfoRight">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieDirectorsTitle"
            android:text="Dirigido por: "
            android:textColor="@color/md_grey_800"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieDirectors"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/movieDirectorsTitle"
            app:layout_constraintBottom_toTopOf="@id/movieScreenplay"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieScreenplayTitle"
            android:text="Escrito por: "
            android:textColor="@color/md_grey_800"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieDirectors"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieScreenplay"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieDirectors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/movieScreenplayTitle"
            app:layout_constraintBottom_toTopOf="@id/movieOriginalLanguage"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/originalLanguageTitle"
            android:text="Idioma Original: "
            android:textColor="@color/md_grey_800"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieScreenplay"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieOriginalLanguage"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieScreenplay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/originalLanguageTitle"
            app:layout_constraintBottom_toTopOf="@id/movieRuntime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runtimeTitle"
            android:text="Duração: "
            android:textColor="@color/md_grey_800"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/originalLanguageTitle"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieRuntime"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieOriginalLanguage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/runtimeTitle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/releaseDateTitle"
            android:text="Lançamento: "
            android:textColor="@color/md_grey_800"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieRuntime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movieReleaseDate"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/movieRuntime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/releaseDateTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
