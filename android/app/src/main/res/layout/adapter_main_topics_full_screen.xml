<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/md_black_1000"
    app:cardCornerRadius="15dp"
    app:cardElevation="20dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainTopicsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainImage"
                android:scaleType="centerCrop"
                android:transitionName="mainImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_degrade_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentBackground"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:transitionName="mainTopicTitleTransition"
                    android:fontFamily="@font/oswald_bold"
                    android:textSize="@dimen/text_size_zeplin_38pt"
                    android:textColor="@color/md_white_1000"
                    android:textAllCaps="true"
                    android:layout_marginEnd="@dimen/activity_vertical_margin_0.5x"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/nextButton"
                    />

                <ImageView
                    android:layout_width="@dimen/main_topic_next_button_width"
                    android:layout_height="0dp"
                    android:id="@+id/nextButton"
                    app:srcCompat="@drawable/ic_navigate_next_white_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/title"
                    app:layout_constraintBottom_toBottomOf="@id/title"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comingSoonTagContainer"
            android:layout_marginTop="@dimen/activity_vertical_margin_2x"
            android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
            android:backgroundTint="@color/md_red_500"
            app:cardCornerRadius="@dimen/activity_vertical_margin_1.2x"
            app:cardElevation="@dimen/activity_vertical_margin_1.2x"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comingSoonTag"
                android:text="@string/comingsoon"
                android:textSize="@dimen/text_size_zeplin_26pt"
                android:fontFamily="@font/oswald_bold"
                android:textColor="@color/md_white_1000"
                android:textAllCaps="true"
                android:paddingTop="@dimen/activity_vertical_margin_0.2x"
                android:paddingBottom="@dimen/activity_vertical_margin_0.5x"
                android:paddingStart="@dimen/activity_vertical_margin_1.2x"
                android:paddingEnd="@dimen/activity_vertical_margin_1.2x"
                />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>