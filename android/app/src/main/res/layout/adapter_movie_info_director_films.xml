<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pageContentListContainer"
        app:cardElevation="@dimen/activity_vertical_margin_0.5x"
        android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scriptsSpecialListContainer"
            android:background="@color/colorAccent">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guide1"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".8"
                />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guide3"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".6"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:id="@+id/imageSpecial"
                android:alpha="0.7"
                android:src="@drawable/img_2001_hal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guide1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/degradeEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guide1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/backgroundColor"
                android:alpha="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/headerViewClickable"
                android:background="?selectableItemBackground"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/scriptsSpecialListTitle"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/scriptsSpecialListTitle"
                android:textColor="@color/md_white_1000"
                android:fontFamily="@font/proxima_nova_bold"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_zeplin_28pt"
                android:layout_marginStart="@dimen/activity_vertical_margin_2x"
                android:layout_marginTop="@dimen/activity_vertical_margin_2x"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guide1"
            />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scriptsSpecialListRecyclerView"
                android:layout_marginTop="@dimen/activity_vertical_margin_2x"
                android:layout_marginBottom="@dimen/activity_vertical_margin_2x"
                app:layout_constraintTop_toBottomOf="@id/scriptsSpecialListTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>