<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:background="?selectableItemBackground"
    android:padding="@dimen/activity_vertical_margin_1.2x"
    android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
    android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
    android:paddingStart="@dimen/activity_vertical_margin_2.5x"
    android:paddingEnd="@dimen/activity_vertical_margin_2.5x">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/sumarioTitle"
        android:textSize="@dimen/text_size_zeplin_28pt"
        android:textColor="@color/md_black_1000"
        android:fontFamily="@font/proxima_nova_bold"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
        android:id="@+id/sumarioDescription"
        android:textSize="@dimen/text_size_zeplin_18pt"
        android:textColor="@color/md_black_1000"
        android:fontFamily="@font/proxima_nova_regular" />

</LinearLayout>