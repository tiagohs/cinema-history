<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@color/md_white_1000">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/appBar"
        app:elevation="0dp"
        android:fitsSystemWindows="false"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/collapsingToolbar"
            android:fitsSystemWindows="false"
            app:layout_scrollFlags="noScroll"
            app:contentScrim="@color/colorPrimary"
            app:titleEnabled="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/contentContainer"
                android:alpha="0"
                android:background="@color/md_white_1000"
                android:fitsSystemWindows="false"
                tools:alpha="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="?attr/actionBarSize"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/contentIndicator">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/homeSlideTitle"
                        android:text="@string/pick_your_journey"
                        android:textColor="@color/md_black_1000"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_zeplin_28pt"
                        android:fontFamily="@font/oswald_bold"
                        android:lineSpacingMultiplier="1.1"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/activity_vertical_margin_2x"
                        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
                        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:id="@+id/homeViewPager"
                        android:fitsSystemWindows="false"
                        android:paddingEnd="@dimen/home_slide_padding_end"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/homeSlideTitle"
                        android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guidelineGlobalBottom"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".8"
                />

                <com.tiagohs.helpers.tools.ViewPagerOverflowPagerIndicator
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contentIndicator"
                    android:layout_gravity="center_horizontal|bottom"
                    app:dotFillColor="@color/md_black_1000"
                    app:dotStrokeColor="@color/md_grey_700"
                    android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_2x"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@color/md_black_1000"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/home_icon_size"
                        android:layout_height="@dimen/home_icon_size"
                        app:srcCompat="@drawable/ic_logo_light"
                        android:contentDescription="@string/description_logo_app"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loadView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:shimmer_duration="800"
        android:visibility="invisible"
        android:layout_marginTop="?attr/actionBarSize"
        android:fitsSystemWindows="true">

        <include layout="@layout/load_home" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <include layout="@layout/view_error" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

