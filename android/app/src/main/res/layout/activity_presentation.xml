<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="@dimen/activity_vertical_margin_2.5x"
        android:layout_marginBottom="@dimen/presentation_appbar_margin_bottom">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll"
            app:scrimVisibleHeightTrigger="@dimen/presentation_appbar_trigger"
            app:titleEnabled="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cinemaImageContainer"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/image"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quoteContainer"
                android:layout_marginBottom="@dimen/activity_vertical_margin_1.2x"
                android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
                android:layout_marginStart="@dimen/activity_vertical_margin_2x"
                android:fitsSystemWindows="true"
                android:background="@android:color/transparent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                android:layout_gravity="bottom|end">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/presentation_quote_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/quoteCard"
                    android:fitsSystemWindows="true"
                    app:cardBackgroundColor="@color/md_white_1000"
                    app:cardElevation="@dimen/activity_vertical_margin_4x"
                    app:cardCornerRadius="@dimen/activity_vertical_margin_1.2x"
                    android:layout_marginStart="@dimen/activity_vertical_margin_4.5x"
                    android:layout_marginEnd="@dimen/activity_vertical_margin_4.5x"
                    android:layout_marginTop="@dimen/activity_vertical_margin_5x"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_5x"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textContainer"
                        android:fitsSystemWindows="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/quoteText"
                            android:textColor="@color/md_black_1000"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="@dimen/text_size_zeplin_18pt"
                            android:textAlignment="center"
                            android:lineSpacingMultiplier="1"
                            android:layout_marginTop="@dimen/activity_vertical_margin_4x"
                            android:layout_marginStart="@dimen/activity_vertical_margin_2.5x"
                            android:layout_marginEnd="@dimen/activity_vertical_margin_4x"
                            android:fitsSystemWindows="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="Teste de Texto Teste de Texto Teste de Texto Teste de Texto "
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/quoteTextAuthor"
                            android:textSize="@dimen/text_size_zeplin_22pt"
                            android:textColor="@color/md_grey_500"
                            android:fontFamily="@font/oswald_regular"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
                            android:layout_marginStart="@dimen/activity_vertical_margin_2.5x"
                            android:layout_marginEnd="@dimen/activity_vertical_margin_2.5x"
                            android:layout_marginBottom="@dimen/activity_vertical_margin_4x"
                            android:lineSpacingMultiplier="0.9"
                            android:fitsSystemWindows="true"
                            app:layout_constraintTop_toBottomOf="@id/quoteText"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="Teste de Author"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/presentation_quote_image_size"
                    android:layout_height="@dimen/presentation_quote_image_size"
                    android:id="@+id/quoteTop"
                    android:src="@drawable/ic_quote_bottom_24dp"
                    android:elevation="@dimen/activity_vertical_margin_4.5x"
                    android:fitsSystemWindows="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <ImageView
                    android:layout_width="@dimen/presentation_quote_image_size"
                    android:layout_height="@dimen/presentation_quote_image_size"
                    android:id="@+id/quoteBottom"
                    android:src="@drawable/ic_quote_top_24dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin_0.5x"
                    android:elevation="@dimen/activity_vertical_margin_4.5x"
                    android:fitsSystemWindows="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="false"
                android:transitionName="toolbar"
                app:layout_collapseParallaxMultiplier="0.8"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mainTopicTitle"
                android:transitionName="mainTopicTitleTransition"
                android:textSize="@dimen/text_size_zeplin_38pt"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/oswald_bold"
                android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mainTopicDescription"
                android:transitionName="mainTopicDescriptionTransition"
                android:textSize="@dimen/text_size_zeplin_18pt"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/proxima_nova_regular"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
                android:paddingStart="@dimen/activity_vertical_margin_4x"
                android:paddingEnd="@dimen/activity_vertical_margin_4x"
                app:layout_constraintTop_toBottomOf="@id/mainTopicTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/presentation_start_button_size"
                android:text="@string/start"
                android:background="@color/md_black_1000"
                android:paddingStart="@dimen/activity_vertical_margin_2.5x"
                android:paddingEnd="@dimen/activity_vertical_margin_2.5x"
                android:layout_marginTop="@dimen/activity_vertical_margin_2x"
                android:layout_marginBottom="@dimen/activity_vertical_margin_2x"
                android:textColor="@color/md_white_1000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mainTopicDescription" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_height"
                android:id="@+id/separator"
                android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
                android:layout_marginStart="@dimen/activity_vertical_margin_5x"
                android:layout_marginEnd="@dimen/activity_vertical_margin_5x"
                android:background="@color/md_grey_400"
                app:layout_constraintTop_toBottomOf="@id/startButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/featuredTitle"
                android:text="@string/sumario"
                android:textSize="@dimen/text_size_zeplin_22pt"
                android:textColor="@color/md_black_1000"
                android:fontFamily="@font/heptaslab_bold"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
                android:paddingStart="@dimen/activity_vertical_margin_4x"
                android:paddingEnd="@dimen/activity_vertical_margin_4x"
                app:layout_goneMarginTop="@dimen/activity_vertical_margin_2.5x"
                app:layout_constraintTop_toBottomOf="@id/separator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sumarioList"
                android:layout_marginTop="@dimen/activity_vertical_margin_4x"
                android:layout_marginBottom="@dimen/activity_vertical_margin_2.5x"
                app:layout_constraintTop_toBottomOf="@id/featuredTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>