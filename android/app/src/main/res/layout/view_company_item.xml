<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin_2x">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineVertical"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
    />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/company_image_height"
        android:id="@+id/companyImage"
        app:srcCompat="@drawable/ic_local_movies_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/companyName"
        android:textSize="@dimen/activity_vertical_margin_2x"
        android:textColor="@color/md_black_1000"
        android:fontFamily="@font/proxima_nova_regular"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintBottom_toTopOf="@id/companyCountry"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/companyCountry"
        android:textSize="@dimen/text_size_zeplin_22pt"
        android:textColor="@color/md_grey_800"
        android:fontFamily="@font/proxima_nova_regular"
        android:layout_marginStart="@dimen/activity_vertical_margin_1.2x"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>