<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/homeItemCard"
        android:backgroundTint="@color/md_black_1000"
        app:cardCornerRadius="@dimen/activity_vertical_margin_2x"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_2.5x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guidelineTop"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".1"
            />

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guidelineBottom"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".9"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/historyMovieImage"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@+id/guidelineTop"
                app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_appbar_degrade_height"
                android:background="@drawable/background_degrade_top"
                app:layout_constraintTop_toBottomOf="@+id/guidelineTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_appbar_degrade_height"
                android:background="@drawable/background_degrade_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/historyLogoTitle1"
                android:text="@string/home_title_1"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_zeplin_26pt"
                android:fontFamily="@font/oswald_bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/guidelineTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_title_2"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_home_title"
                android:fontFamily="@font/billionairemediumgrunge"
                app:layout_constraintTop_toBottomOf="@id/historyLogoTitle1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>