<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin_4x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainTopicsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_topic_card_image_height"
            android:id="@+id/mainImage"
            android:scaleType="centerCrop"
            android:transitionName="mainImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentBackground"
            android:paddingStart="@dimen/activity_vertical_margin_2x"
            android:paddingEnd="@dimen/activity_vertical_margin_2x"
            android:paddingTop="@dimen/activity_vertical_margin_1.2x"
            android:paddingBottom="@dimen/activity_vertical_margin_1.2x"
            android:background="@color/md_black_1000"
            app:layout_constraintTop_toBottomOf="@id/mainImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainSubtitle"
                android:fontFamily="@font/oswald_light"
                android:textColor="@color/md_white_1000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:transitionName="mainTopicTitleTransition"
                android:fontFamily="@font/oswald_bold"
                android:textSize="@dimen/text_size_zeplin_38pt"
                android:textColor="@color/md_white_1000"
                android:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/mainSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:transitionName="mainTopicDescriptionTransition"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/text_size_zeplin_22pt"
                android:textColor="@color/md_white_1000"
                android:layout_marginTop="@dimen/activity_vertical_margin_0.5x"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comingSoonTagContainer"
        android:layout_marginTop="@dimen/activity_vertical_margin_2x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
        android:backgroundTint="@color/md_red_500"
        app:cardCornerRadius="@dimen/activity_vertical_margin_0.5x"
        app:cardElevation="@dimen/activity_vertical_margin_1.2x"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comingSoonTag"
            android:text="@string/comingsoon"
            android:textSize="@dimen/text_size_zeplin_26pt"
            android:fontFamily="@font/oswald_bold"
            android:textColor="@color/md_white_1000"
            android:textAllCaps="true"
            android:paddingTop="@dimen/activity_vertical_margin_0.2x"
            android:paddingBottom="@dimen/activity_vertical_margin_0.5x"
            android:paddingStart="@dimen/activity_vertical_margin_0.5x"
            android:paddingEnd="@dimen/activity_vertical_margin_0.5x"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>