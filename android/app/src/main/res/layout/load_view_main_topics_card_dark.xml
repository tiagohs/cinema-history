<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin_2x"
    android:layout_marginStart="@dimen/activity_vertical_margin_2x"
    android:layout_marginEnd="@dimen/activity_vertical_margin_2x">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_topic_card_image_height"
        android:id="@+id/mainImage"
        android:background="@color/cell_background_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentBackground"
        android:paddingTop="@dimen/activity_vertical_margin_1.2x"
        android:paddingBottom="@dimen/activity_vertical_margin_1.2x"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/mainImage"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                    "
            android:background="@color/cell_background_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:text="                             "
            android:textSize="@dimen/text_size_zeplin_38pt"
            android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
            android:background="@color/cell_background_dark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/text_size_zeplin_22pt"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="@dimen/activity_vertical_margin_1.2x"
            android:lines="3"
            android:background="@color/cell_background_dark" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>