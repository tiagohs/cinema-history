<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_black_1000">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/personMidiaTitle"
        android:text="@string/media"
        android:textSize="@dimen/text_size_zeplin_36pt"
        android:textColor="@color/md_grey_300"
        android:fontFamily="@font/oswald_bold"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
        android:layout_marginStart="@dimen/activity_vertical_margin_2.5x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_1.2x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/videoList"
        android:layout_marginTop="@dimen/activity_vertical_margin_2.5x"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="@dimen/activity_vertical_margin_2x"
        android:background="@color/md_black_1000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/personMidiaTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wallpapersList"
        android:layout_marginTop="@dimen/activity_vertical_margin_2x"
        android:layout_marginBottom="@dimen/activity_vertical_margin_2.5x"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="@dimen/activity_vertical_margin_2x"
        android:background="@color/md_black_1000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/videoList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>