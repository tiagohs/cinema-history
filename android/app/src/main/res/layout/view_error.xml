<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:id="@+id/errorContainer"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/activity_vertical_margin_2x"
        android:layout_marginEnd="@dimen/activity_vertical_margin_2x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_signal_cellular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:id="@+id/errorTitle"
            android:text="@string/error_title_ops"
            android:textColor="@color/md_black_1000"
            android:fontFamily="@font/oswald_bold"
            android:textSize="@dimen/text_size_zeplin_34pt"
            android:layout_marginTop="@dimen/activity_vertical_margin_2x"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:id="@+id/errorDescription"
            android:text="@string/error_unknown"
            android:textColor="@color/md_black_1000"
            android:textAlignment="center"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/text_size_zeplin_22pt"
            android:layout_marginTop="@dimen/activity_vertical_margin_1.5x"
        />

        <Button
            android:id="@+id/tryAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/presentation_start_button_size"
            android:text="@string/try_again"
            android:background="@color/md_black_1000"
            android:paddingStart="@dimen/activity_vertical_margin_2.5x"
            android:paddingEnd="@dimen/activity_vertical_margin_2.5x"
            android:layout_marginTop="@dimen/activity_vertical_margin_3x"
            android:textColor="@color/md_white_1000"
            android:fontFamily="@font/proxima_nova_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainTopicDescription" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>