<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/quoteTop"
        android:src="@drawable/ic_quote_bottom_24dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/quoteText"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras congue, justo id efficitur pellentesque, ipsum mauris fermentum nulla, sed hendrerit turpis nulla non quam."
        android:textColor="@color/md_grey_700"
        android:fontFamily="@font/opensans_regular"
        android:textSize="24sp"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/quoteTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/md_grey_400"
        app:layout_constraintTop_toBottomOf="@id/quoteText"
        app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/quoteTextAuthor"
        android:text="Charlie Chaplin"
        android:textSize="18sp"
        android:fontFamily="@font/opensans_light"
        android:textAllCaps="true"
        android:textColor="@color/md_grey_900"
        android:layout_marginTop="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/quoteBottom"
        android:src="@drawable/ic_quote_top_24dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/quoteTextAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>