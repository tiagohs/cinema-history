<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="colorAccent">@color/md_blue_500</item>

        <item name="android:fontFamily">@font/opensans_regular</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.AppThemeWithStatusTransparent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppThemeWithStatusWhite">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.AppThemeWithStatusBarSemiTransarent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.TimelineStyle">
        <item name="colorPrimaryDark">@color/red_timeline</item>
    </style>

    <style name="AppTheme.Expansed">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Collalpsed">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Overlay" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.CollapsedTitle" parent="Widget.Support.CoordinatorLayout">
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
