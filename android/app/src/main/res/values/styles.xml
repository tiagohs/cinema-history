<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="colorAccent">@color/md_blue_500</item>

        <item name="android:fontFamily">@font/proxima_nova_regular</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AboutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="colorAccent">@color/md_blue_500</item>

        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>



    <style name="AppTheme.AppThemeWithStatusTransparent">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppThemeWithStatusWhite">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.AppThemeWithStatusBarSemiTransarent">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
    </style>

    <style name="AppTheme.TimelineStyle">
        <item name="colorPrimaryDark">@color/md_yellow_A700</item>
    </style>

    <style name="AppTheme.Expansed">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="AppTheme.Collalpsed">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStandard" parent="Theme.AppCompat">
        <item name="android:elevation">0dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionMenuTextAppearance">@style/ToolBarMenuItem</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ToolBarTransparent" parent="ToolBarStandard">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ActionBarStyle" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/ToolBarTitle</item>
    </style>

    <style name="ToolBarMenuItem" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:fontFamily">fonts/proxima_nova_regular</item>
        <item name="fontFamily">fonts/proxima_nova_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolBarTitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:fontFamily">fonts/proxima_nova_bold</item>
        <item name="fontFamily">fonts/proxima_nova_bold</item>
    </style>

    <style name="AppTheme.Overlay" parent="AppTheme">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>

    <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.CollapsedTitle" parent="Widget.Support.CoordinatorLayout">
        <item name="android:fontFamily">@font/oswald_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
